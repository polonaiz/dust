{
    "name": "wasm",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "ubuntu-22.04"
        }
    },
    "postCreateCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}  && sh ${containerWorkspaceFolder}/.devcontainer/postCreate.sh",
    "remoteUser": "root",
    "mounts": [],
    "customizations": {
        "vscode": {
            "extensions": [
                "mhutchie.git-graph",
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb"
            ]
        }
    }
}